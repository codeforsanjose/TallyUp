// https://bun.sh/docs/typescript#suggested-compileroptions
{
  "exclude": ["node_modules", "build", "bun.lockb", "bun.lock", "cdk.out", "dist"],
  "compilerOptions": {
    // Environment setup & latest features
    "target": "ES2024", // https://node.green/#ES2025 when aws lambda moves on from 22.x, look at changing this
    "module": "ES2022",
    "moduleDetection": "force",
    "checkJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true
  }
}
