{
  "name": "tally-up-backend",
  "description": "tally-up-backend",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.398.0",
    "@aws-sdk/lib-dynamodb": "^3.398.0",
    "@hey-api/client-fetch": "^0.10.0",
    "htmx.org": "^2.0.4"
  },
  "devDependencies": {
    "@hey-api/openapi-ts": "^0.66.7",
    "@types/aws-lambda": "^8.10.149",
    "@types/bun": "^1.2.10",
    "aws-sdk-client-mock": "^2.0.0",
    "jest": "^29.2.1",
    "prettier": "^3.5.3"
  },
  "scripts": {
    "client:frontend": "bunx @hey-api/openapi-ts -i ./openapi.yaml -o htmx-pwa-frontend/client -c @hey-api/client-fetch",
    "format": "bun run prettier --write .",
    "postinstall": "bun run client:frontend"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)",
      "**/__tests__/**/*.mjs?(x)",
      "**/?(*.)+(spec|test).mjs?(x)"
    ],
    "moduleFileExtensions": [
      "mjs",
      "js"
    ]
  },
  "workspaces": {
    "packages": [
      "htmx-pwa-frontend"
    ]
  }
}